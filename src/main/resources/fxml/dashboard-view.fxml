<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.revaniexchange.controller.DashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="welcomeLabel" text="Welcome, User!">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onShowOrdersClick" text="Show My Orders" />
            <Button onAction="#onLogoutClick" text="Logout" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="productTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="450.0" text="Product Name" />
                <TableColumn fx:id="priceCol" prefWidth="150.0" text="Price" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
